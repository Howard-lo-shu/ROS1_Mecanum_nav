<launch>
  <!-- Arguments -->
  <arg name="cmd_vel_topic" default="/nav_vel" />
  <arg name="odom_topic" default="/odom_ekf" />
  <arg name="move_forward_only" default="false"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="true" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find robot_nav)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find robot_nav)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find robot_nav)/param/local_costmap_params_dwa.yaml" command="load" />
    <rosparam file="$(find robot_nav)/param/global_costmap_params_dwa.yaml" command="load" />
    <rosparam file="$(find robot_nav)/param/move_base_params.yaml" command="load" />
    <rosparam file="$(find robot_nav)/param/dwa_local_planner_params.yaml" command="load" />
    <!--param name="base_global_planner" value="voronoi_planner/VoronoiPlannerROS" />
	  <param name="planner_frequency" value="1.0" />
	  <param name="planner_patience" value="5.0" /-->
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
  </node>
</launch>
